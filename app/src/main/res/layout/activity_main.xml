<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="380dp"
        android:layout_height="176dp"
        android:gravity="center_vertical|end"
        android:maxLength="16"
        android:text="0"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="377dp"
        android:layout_height="330dp"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/display">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/operacion"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="OperaciÃ³n"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="clear"
                    android:text="CLEAR"
                    android:textSize="25sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_7"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="7"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_8"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="8"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_9"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="9"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_dividir"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonOperacionPulsado"
                    android:text="/"
                    android:textSize="25sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_4"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="4"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_5"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="5"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_6"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="6"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_multiplicar"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:onClick="botonOperacionPulsado"
                    android:text="*"
                    android:textSize="25sp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_1"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="1"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="2"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_3"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="3"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_restar"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonOperacionPulsado"
                    android:text="-"
                    android:textSize="25sp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_coma"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="anyadirComa"
                    android:text="."
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_0"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonPulsado"
                    android:text="0"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_igual"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="mostrarResultado"
                    android:text="="
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/boton_suma"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:onClick="botonOperacionPulsado"
                    android:text="+"
                    android:textSize="25sp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrando deshabilitar opciones"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout"
        app:layout_constraintStart_toStartOf="@+id/tableLayout"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="396dp"
        android:layout_height="43dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:onClick="botonOperacionPulsado"
            android:text="SUMA" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:onClick="botonOperacionPulsado"
            android:text="RESTA" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:onClick="botonOperacionPulsado"
            android:text="MULTIPLICAR" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:onClick="botonOperacionPulsado"
            android:text="DIVIDIR" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>